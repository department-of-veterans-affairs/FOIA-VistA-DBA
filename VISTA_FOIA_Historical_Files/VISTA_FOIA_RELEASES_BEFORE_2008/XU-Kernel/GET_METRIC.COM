$! GET_METRIC.COM$! This script will get the system Metric and set it into symbol Vista$metric$ set mess /nofac/nosev/noid/notext$!$ pid = f$getjpi("","PID")$ fn1 = "user$:[temp]metric1_''pid'.tmp"$ fn2 = "user$:[temp]metric2_''pid'.tmp"$ assign /user 'fn1 sys$output$ mcr tcpip$metricview /host=127.0.0.1$ deassign sys$output$ search/output='fn2 'fn1 "LOCALHOST"$ open/error=err_exit/end=err_exit metric 'fn2$ read metric line$ close metric$ delete /noconfirm /nolog 'fn1;*,'fn2;*$ metric = f$edit(f$extract(50,50,line),"TRIM")$!$ set noon$! Depends of user privlage$ define Vista$Metric /system "''metric'"$ define Vista$Metric /job "''metric'"$ set mess /fac/sev/id/text$ exit